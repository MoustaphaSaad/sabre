const MAX_COLOR_ATTACHMENT = 4;

type Pipeline struct {
	rasterizer: Rasterizer,
	depth: Depth,
	independent_blend: bool,
	blend: [MAX_COLOR_ATTACHMENT]Blend,
}

type Rasterizer struct {
	cull: bool,
	face: Face,
	front: Orientation,
	scissor: bool,
}

type Face enum {
	None = 0,
	Back = 1,
	Front = 2,
	Front_Back = 3,
}

type Orientation enum {
	None,
	CCW,
	CW,
}

type Depth struct {
	depth_test: bool = true,
	depth_write: bool,
}

type Blend struct {
	enabled: bool,
	src_rgb, dst_rgb, src_alpha, dst_alpha: Blend_Param,
	eq_rgb, eq_alpha: Blend_Eq,
	color_mask: Color_Mask,
}

type Blend_Param enum {
	None,
	Zero,
	One,
	Src_Color,
	One_Minus_Src_Color,
	Dst_Color,
	One_Minus_Dst_Color,
	Src_Alpha,
	One_Minus_Src_Alpha,
}

type Blend_Eq enum {
	None,
	Add,
	Subtract,
	Min,
	Max,
}

type Color_Mask enum {
	None = -1,
	Default = 0,
	Red = 1,
	Green = 2,
	Blue = 4,
	Alpha = 8,
	All = 15,
}
