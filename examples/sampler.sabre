package main

import "std"

@sampler_state
type Sampler_State struct {
	x, y: float
}

@uniform var sampler: Sampler = :Sampler_State {
	x = 1.3,
	y = 2
};
@uniform var texture: Texture2D;

func get_color(t: Texture2D, s: Sampler): vec4 {
	return std.texture_sample(t, :vec2{});
}

func foo(): vec4 {
	return get_color(texture, sampler);
	return std.texture_sample(texture, :vec2{});
}