type Dir enum {
	Up = 1,
	Down = 2,
	Left = 4,
	Right = 8,
	Up_Left = .Up + .Left,
}

const koko: Dir = .Left;

if koko == .Left {
	func offset(d: Dir): vec2 {
		if d == .Up {
			return {0, -1};
		} else if d == .Down {
			return {0, 1};
		} else if d == .Left {
			return {-1, 0};
		} else if d == .Right {
			return {1, 0};
		} else {
			return {};
		}
	}
}