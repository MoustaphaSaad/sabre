type Dir enum {
	Up = 1 << 0,
	Down = 1 << 1,
	Left = 1 << 2,
	Right = 1 << 3,
	Down_Left = .Down + .Left,
	Up_Right = .Up | .Right,
}

const koko: Dir = .Left;

if koko == Dir.Left {
	func offset(d: Dir): vec2 {
		if d == .Up {
			return {0, -1};
		} else if d == .Down {
			return {0, 1};
		} else if d == .Left {
			return {-1, 0};
		} else if d == .Right {
			return {1, 0};
		} else {
			return {};
		}
	}
}